// This is your Prisma schema file,
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Seller {
  id    String @id
  balance Int
  transactions Transaction[]

  @@map("sellers")
}

model Transaction {
  id    String @id @default(uuid())
  type Int
  date DateTime
  product String
  value Float
  sellerId String?
  seller Seller? @relation(fields: [sellerId], references: [id])

  @@map("transactions")
}